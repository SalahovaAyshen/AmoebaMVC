@model UpdatePortfolioVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Portfolio</h4>

            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Photo">Image</label>
                    <input class="form-control" asp-for="Photo">
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" asp-for="Name" placeholder="Name">
                    <span asp-validation-for="Name"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client">Client name</label>
                    <input class="form-control" asp-for="Client" placeholder="Client name">
                    <span asp-validation-for="Client"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectUrl">Project Url</label>
                    <input class="form-control" asp-for="ProjectUrl" placeholder="Project url">
                    <span asp-validation-for="ProjectUrl"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Detail">Project detail</label>
                    <input class="form-control" asp-for="Detail" placeholder="Project detail">
                    <span asp-validation-for="Detail"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId">Categories</label>
                    <select asp-for="CategoryId" asp-items="new SelectList(Model.Categories, (nameof(Category.Id)), (nameof(Category.Name)))">
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ProjectDate">Project Date</label>
                    <input class="form-control" asp-for="ProjectDate" placeholder="Project date">
                    <span asp-validation-for="ProjectDate"></span>
                </div>


                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>
